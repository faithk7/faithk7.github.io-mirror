---
permalink: /stories-boston.json
type: "boston"
---
{% assign stories = site.data.stories | where_exp: "story",
  "story.meta.tags contains page.type" | where_exp: "story",
  "story.meta.tags contains 'Highlight'" %}
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "@kai's stories for {{ page.type }}",
  "icon": "https://github.com/muan.png",
  "home_page_url": "{{ site.url }}/",
  "feed_url": "{{ site.url }}/stories-boston.json",
  "description": "Stories about {{ page.type }}.",
  "_open_stories": {
    "version": "0.0.9"
  },
  "items": [
    {% for story in stories %}
    {% if stories.first != story %},{% endif %}
    {
      "id": "{{ story.id }}",
      "date_published": "{{ story.uploaded | date_to_xmlschema }}",
      {% assign date_expired = story.uploaded | date: "%s" | plus: 86400 | date_to_xmlschema %}
      "tags": [
        {% for tag in story.meta.tags %}
        "{{ tag }}"{% if tag != story.meta.tags.last %},{% endif %}
        {% endfor %}
      ],
      "content_html": "<img src='https://55dbd1d.webp.li/pk7/{{ story.id }}.jpg' alt='{{ story.meta.alt }}'>",
      "authors": [
        {
          "name": "Kai Qu",
          "url": "{{ site.url }}"
        }
      ],
      "url": "{{ site.url }}/stories/{{ story.id }}",
      "_open_stories": {
        "mime_type": "image/jpeg",
        "url": "https://55dbd1d.webp.li/pk7/{{ story.id }}.jpg",
        "alt": "{{ story.meta.alt }}",
        "caption": "{{ story.meta.caption }}",
        "reactions": {
          "open_heart_urls": [
            "https://likes.muan.dev/?id=/stories/{{ story.id }}"
          ]
        }
      }
    }{% endfor %}
  ]
}